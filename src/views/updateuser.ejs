<% include partials/head %>
<div class="card m-5 col-6 mx-auto">
    <div class="card-header">
        <h4 class="font-weight-bold">Actualizar usuario</h4>
    </div>
    <div class="card-body">
        <form action="/updateUser/<%= oneUser._id %>" method="post">
            <div class="form-group mb-3">
                <label class="form-label text-secondary">Nombre</label>
                <input type="text" name="name" value="<%= oneUser.local.name %>" class="form-control">
              </div>
              <div class="form-group mb-3">
                <label class="form-label text-secondary">RUT</label>
                <input type="text" name="rut" class="form-control" placeholder="11.111.111-1" value="<%= oneUser.local.rut %>">
              </div>
              <div class="form-group mb-3">
                <label class="form-label text-secondary">Correo</label>
                <input type="email" name="email" class="form-control" value="<%= oneUser.local.email %>">
              </div>
              <div class="card-body">
                <br>
                <div class="input-group my-3">
                  <label for="departamento" class="text-uppercase text-primary mx-3">Regi√≥n</label>
                  <select class="custom-select" name="region" id="departamento" class="custom-select" required>
                    <!-- cargaremos las etiquetas de option con javascript -->
                  </select>
                </div>
  
                <div class="input-group my-3">
                  <label for="provincia" class="text-uppercase text-primary mx-3">Comuna</label>
                  <select name="comuna" id="provincia" class="custom-select">
                    <!-- cargaremos las etiquetas de option con javascript -->
                  </select>
                </div>
              </div>
              <hr>
  
              <input type="submit" class="btn btn-primary mt-2">
              <a href="/" class="btn btn-light mt-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<script src="/js/comunas.js" defer></script>